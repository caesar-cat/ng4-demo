
.main-card
    min-height 460px
    text-align center
    mat-card-title
        font-weight bold
        font-size 24px
    mat-card-content
        text-align left
    img
        width 256px
        height 256px
    mat-card-actions
        display: flex
        justify-content: flex-end
.current-query-count 
    display flex
    justify-content flex-start
    height 34px
    span
        display inline-flex

        line-height 34px
        .color-inactive
            color #ff4081
        .color-active
            color #3f51b5
    span:nth-child(2)
        margin-left: 20px

        